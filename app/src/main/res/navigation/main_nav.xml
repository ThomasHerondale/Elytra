<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/flights">

    <fragment
        android:id="@+id/flights"
        android:name="tau.timentau.detau.elytra.SearchFlightsFragment"
        android:label="@string/voli"
        tools:layout="@layout/fragment_search_flights" >
        <action
            android:id="@+id/search_flights_to_select_going_flight"
            app:destination="@id/selectGoingFlight" />
        <action
            android:id="@+id/action_flights_to_selectReturnFlight"
            app:destination="@id/selectReturnFlight" />
    </fragment>
    <fragment
        android:id="@+id/selectGoingFlight"
        android:name="tau.timentau.detau.elytra.SelectFlightFragment"
        android:label="fragment_select_going_flight"
        tools:layout="@layout/fragment_select_flight" >
        <argument
            android:name="isReturn"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="goingFlight"
            app:argType="tau.timentau.detau.elytra.model.Flight"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/selectReturnFlight"
        android:name="tau.timentau.detau.elytra.SelectFlightFragment"
        android:label="fragment_select_going_flight"
        tools:layout="@layout/fragment_select_flight">
        <argument
            android:name="isReturn"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="goingFlight"
            android:defaultValue="@null"
            app:argType="tau.timentau.detau.elytra.model.Flight"
            app:nullable="true" />
    </fragment>
</navigation>