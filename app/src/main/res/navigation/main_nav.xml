<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/flights">

    <fragment
        android:id="@+id/flights"
        android:name="tau.timentau.detau.elytra.flights.SearchFlightsFragment"
        android:label="@string/voli"
        tools:layout="@layout/fragment_search_flights" >
        <action
            android:id="@+id/search_flights_to_select_going_flight"
            app:destination="@id/selectGoingFlight" />
    </fragment>
    <fragment
        android:id="@+id/selectGoingFlight"
        android:name="tau.timentau.detau.elytra.flights.SelectFlightFragment"
        android:label="fragment_select_going_flight"
        tools:layout="@layout/fragment_select_flight" >
        <argument
            android:name="isReturn"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="isPaymentNext"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/select_going_flight_to_customize_trip"
            app:destination="@id/customizeTripFragment" />
        <action
            android:id="@+id/select_going_flight_to_select_return_flight"
            app:destination="@id/selectGoingFlight" />
    </fragment>
    <fragment
        android:id="@+id/customizeTripFragment"
        android:name="tau.timentau.detau.elytra.flights.CustomizeTripFragment"
        android:label="fragment_customize_flight"
        tools:layout="@layout/fragment_customize_trip">
        <action
            android:id="@+id/customize_trip_to_customize_trip"
            app:destination="@id/customizeTripFragment" />
        <argument
            android:name="passengerIndex"
            app:argType="integer" />
        <argument
            android:name="isRoundTrip"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/customize_trip_to_payment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="tau.timentau.detau.elytra.flights.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/payment_to_flights"
            app:destination="@id/flights"
            app:popUpTo="@id/flights"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/accomodations"
        android:name="tau.timentau.detau.elytra.accomodations.SearchAccomodationsFragment"
        android:label="fragment_search_accomodations"
        tools:layout="@layout/fragment_search_accomodations" >
        <action
            android:id="@+id/accomodations_to_selectAccomodation"
            app:destination="@id/selectAccomodationFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectAccomodationFragment"
        android:name="tau.timentau.detau.elytra.accomodations.SelectAccomodationFragment"
        android:label="fragment_select_accomodation"
        tools:layout="@layout/fragment_select_accomodation">
        <argument
            android:name="nightCount"
            app:argType="integer" />
        <argument
            android:name="hostCount"
            app:argType="integer" />
        <action
            android:id="@+id/select_accomodation_to_payment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="tau.timentau.detau.elytra.accomodations.PaymentFragment"
        android:label="PaymentFragment" >
        <argument
            android:name="hostCount"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
</navigation>