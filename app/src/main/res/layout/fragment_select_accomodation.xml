<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accomodations.SelectAccomodationFragment" >

    <TextView
        android:id="@+id/titoloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alloggi_disponibili"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descrizioneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titoloTextView"
        app:layout_constraintStart_toStartOf="@id/titoloTextView"
        android:layout_marginTop="8dp"
        android:text="@string/seleziona_un_alloggio" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accomodationsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descrizioneTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>