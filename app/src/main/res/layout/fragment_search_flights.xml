<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFlightsFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/departureAptText"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/fetchAptsProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/fetchAptsProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/swapAirportsBttn"
        app:layout_constraintEnd_toEndOf="@+id/swapAirportsBttn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/swapAirportsBttn"
        app:layout_constraintTop_toTopOf="@+id/swapAirportsBttn" />

    <Button
        android:id="@+id/swapAirportsBttn"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:icon="@drawable/ic_swap_horiz_24"
        app:layout_constraintBottom_toTopOf="@+id/arrivalAptText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departureAptText">

    </Button>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/arrivalAptText"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/departureAptText"
        app:layout_constraintStart_toStartOf="@+id/departureAptText"
        app:layout_constraintTop_toBottomOf="@+id/departureAptText">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/goingDateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toStartOf="@+id/returnDatetext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/arrivalAptText"
        app:layout_constraintTop_toBottomOf="@+id/arrivalAptText">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:inputType="datetime|date"
            android:maxEms="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/returnDatetext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/goingDateText"
        app:layout_constraintEnd_toStartOf="@+id/passengersText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/goingDateText"
        app:layout_constraintTop_toTopOf="@+id/goingDateText">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:inputType="datetime|date"
            android:maxEms="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passengersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/returnDatetext"
        app:layout_constraintEnd_toEndOf="@+id/fetchAptsProgress"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/returnDatetext"
        app:layout_constraintTop_toTopOf="@+id/returnDatetext">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="hint"
            android:maxLength="1"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/serviceClassChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/goingDateText"
        app:layout_constraintTop_toBottomOf="@+id/goingDateText">

        <com.google.android.material.chip.Chip
            android:id="@+id/economyChip"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/economy" />

        <com.google.android.material.chip.Chip
            android:id="@+id/businessChip"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business" />

        <com.google.android.material.chip.Chip
            android:id="@+id/firstClassChip"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prima_classe" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/priceSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:valueFrom="0.0"
        android:valueTo="700.0"
        android:stepSize="10.0"
        app:labelBehavior="visible"
        app:layout_constraintEnd_toEndOf="@+id/fetchAptsProgress"
        app:layout_constraintStart_toStartOf="@+id/serviceClassChips"
        app:layout_constraintTop_toBottomOf="@+id/serviceClassChips"
        app:values="@array/price_slider_init" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/priceSlider"
        app:layout_constraintTop_toBottomOf="@+id/priceSlider">

        <com.google.android.material.chip.Chip
            android:id="@+id/expandCompanyMenuBttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/compagnie"
            app:closeIcon="@drawable/ic_arrow_l2r_24"
            app:closeIconEnabled="true" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/companyChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="12dp" />
        </HorizontalScrollView>

    </LinearLayout>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/roundTripSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:checked="true"
        app:layout_constraintStart_toStartOf="@+id/goingDateText"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tripKindLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/andata_e_ritorno"
        app:layout_constraintBottom_toBottomOf="@+id/roundTripSwitch"
        app:layout_constraintStart_toEndOf="@+id/roundTripSwitch"
        app:layout_constraintTop_toTopOf="@+id/roundTripSwitch" />

    <Button
        android:id="@+id/searchFlightsBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tripKindLabel"
        app:layout_constraintTop_toTopOf="@+id/roundTripSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>